<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/home_add_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top"
    android:orientation="vertical"
    android:background="@color/settingpage_pageBackgroundColor"
    android:focusable="true"
    android:focusableInTouchMode="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" >

    <!--    AppBar Title-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/settingpage_appBarTitleTextColor"
        android:textSize="@dimen/settingpage_appBarTitleTextSize"
        android:paddingVertical="@dimen/settingpage_appBarTitlePadding"
        android:text="@string/home_add_submitText"/>

    <!--        divide line-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/page_divideLineSize"
        android:background="@color/SecondTextColor"
        android:layout_marginHorizontal="@dimen/page_dividePadding"
        android:layout_marginBottom="@dimen/page_dividePadding"/>

    <!--    表單-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbarStyle="insideOverlay"
        android:scrollbars="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/settingpage_pagePaddingHorizontal">

            <!--    0. 日期 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingVertical="@dimen/home_pageTextPaddingVertical"
                        android:textSize="@dimen/settingpage_pageTitleTextSize"
                        android:textColor="@color/settingpage_pageTitleTextColor"
                        android:text="@string/home_add_dateText"/>
                    <Button
                        android:id="@+id/home_add_date"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:text="@string/home_add_init_date"/>
                </LinearLayout>
                <!--        divide line-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/page_divideLineSize"
                    android:background="@android:color/transparent"
                    android:layout_marginHorizontal="@dimen/page_dividePadding"
                    android:layout_marginTop="@dimen/page_dividePadding"/>
            </LinearLayout>

            <!--    1. 類型 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingVertical="@dimen/home_pageTextPaddingVertical"
                        android:textSize="@dimen/settingpage_pageTitleTextSize"
                        android:textColor="@color/settingpage_pageTitleTextColor"
                        android:text="@string/home_add_typeText"/>
                    <RadioGroup
                        android:id="@+id/home_add_typeRadio"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:orientation="horizontal">
                        <RadioButton
                            android:id="@+id/home_add_income"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingEnd="@dimen/settingRecommend_typePadding"
                            android:text="@string/home_add_incomeText"
                            android:textColor="@color/settingpage_pageTextColor"
                            android:textSize="@dimen/settingpage_pageTextSize" />
                        <RadioButton
                            android:id="@+id/home_add_expend"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingEnd="@dimen/settingRecommend_typePadding"
                            android:text="@string/home_add_expendText"
                            android:textColor="@color/settingpage_pageTextColor"
                            android:textSize="@dimen/settingpage_pageTextSize"/>
                        <RadioButton
                            android:id="@+id/home_add_trans"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingEnd="@dimen/settingRecommend_typePadding"
                            android:text="@string/home_add_transText"
                            android:textColor="@color/settingpage_pageTextColor"
                            android:textSize="@dimen/settingpage_pageTextSize"/>
                    </RadioGroup>
                </LinearLayout>
                <!--        divide line-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/page_divideLineSize"
                    android:background="@android:color/transparent"
                    android:layout_marginHorizontal="@dimen/page_dividePadding"
                    android:layout_marginTop="@dimen/page_dividePadding"/>
            </LinearLayout>

            <!--        2. 金額-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingVertical="@dimen/home_pageTextPaddingVertical"
                        android:textSize="@dimen/settingpage_pageTitleTextSize"
                        android:textColor="@color/settingpage_pageTitleTextColor"
                        android:text="@string/home_add_moneyText"/>
                    <Button
                        android:id="@+id/home_add_money_cal"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:text="@string/home_add_init_cal"/>
                </LinearLayout>
                <!--        divide line-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/page_divideLineSize"
                    android:background="@android:color/transparent"
                    android:layout_marginHorizontal="@dimen/page_dividePadding"
                    android:layout_marginTop="@dimen/page_dividePadding"/>
            </LinearLayout>

            <!--        3-1. (收支)帳戶-->
            <LinearLayout
                android:id="@+id/home_add_accountSingleLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingVertical="@dimen/home_pageTextPaddingVertical"
                        android:textSize="@dimen/settingpage_pageTitleTextSize"
                        android:textColor="@color/settingpage_pageTitleTextColor"
                        android:text="@string/home_add_accountSingleText"/>
                    <Button
                        android:id="@+id/home_add_accountSingle"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:text="@string/home_add_init_ac"/>
                </LinearLayout>
                <!--        divide line-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/page_divideLineSize"
                    android:background="@android:color/transparent"
                    android:layout_marginHorizontal="@dimen/page_dividePadding"
                    android:layout_marginTop="@dimen/page_dividePadding"/>
            </LinearLayout>

            <!--        3-1. (收)分類-->
            <LinearLayout
                android:id="@+id/home_add_classificationINLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingVertical="@dimen/home_pageTextPaddingVertical"
                        android:textSize="@dimen/settingpage_pageTitleTextSize"
                        android:textColor="@color/settingpage_pageTitleTextColor"
                        android:text="@string/home_add_classificationText"/>
                    <Button
                        android:id="@+id/home_add_classificationIN"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:text="@string/home_add_init_class"/>
                </LinearLayout>
                <!--        divide line-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/page_divideLineSize"
                    android:background="@android:color/transparent"
                    android:layout_marginHorizontal="@dimen/page_dividePadding"
                    android:layout_marginTop="@dimen/page_dividePadding"/>
            </LinearLayout>

            <!--        3-1. (支)分類-->
            <LinearLayout
                android:id="@+id/home_add_classificationEXLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingVertical="@dimen/home_pageTextPaddingVertical"
                        android:textSize="@dimen/settingpage_pageTitleTextSize"
                        android:textColor="@color/settingpage_pageTitleTextColor"
                        android:text="@string/home_add_classificationText"/>
                    <Button
                        android:id="@+id/home_add_classificationEX"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:text="@string/home_add_init_class"/>
                </LinearLayout>
                <!--        divide line-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/page_divideLineSize"
                    android:background="@android:color/transparent"
                    android:layout_marginHorizontal="@dimen/page_dividePadding"
                    android:layout_marginTop="@dimen/page_dividePadding"/>
            </LinearLayout>

            <!--        3-1. (收支)成員-->
            <LinearLayout
                android:id="@+id/home_add_memberLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingVertical="@dimen/home_pageTextPaddingVertical"
                        android:textSize="@dimen/settingpage_pageTitleTextSize"
                        android:textColor="@color/settingpage_pageTitleTextColor"
                        android:text="@string/home_add_memberText"/>
                    <Button
                        android:id="@+id/home_add_member"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:text="@string/home_add_init_member"/>
                </LinearLayout>
                <!--        divide line-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/page_divideLineSize"
                    android:background="@android:color/transparent"
                    android:layout_marginHorizontal="@dimen/page_dividePadding"
                    android:layout_marginTop="@dimen/page_dividePadding"/>
            </LinearLayout>

            <!--        3-2. (轉)帳戶to帳戶-->
            <LinearLayout
                android:id="@+id/home_add_accountStartLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingVertical="@dimen/home_pageTextPaddingVertical"
                        android:textSize="@dimen/settingpage_pageTitleTextSize"
                        android:textColor="@color/settingpage_pageTitleTextColor"
                        android:text="@string/home_add_accountStartText"/>
                    <Button
                        android:id="@+id/home_add_accountStart"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:text=""/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingVertical="@dimen/home_pageTextPaddingVertical"
                        android:textSize="@dimen/settingpage_pageTitleTextSize"
                        android:textColor="@color/settingpage_pageTitleTextColor"
                        android:text="@string/home_add_accountEndText"/>
                    <Button
                        android:id="@+id/home_add_accountEnd"
                        android:layout_width="0dp"
                        android:layout_weight="3"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:text=""/>
                </LinearLayout>
                <!--        divide line-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/page_divideLineSize"
                    android:background="@android:color/transparent"
                    android:layout_marginHorizontal="@dimen/page_dividePadding"
                    android:layout_marginTop="@dimen/page_dividePadding"/>
            </LinearLayout>

            <!--    4. 內文描述 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingVertical="@dimen/home_pageTextPaddingVertical"
                    android:textSize="@dimen/settingpage_pageTitleTextSize"
                    android:textColor="@color/settingpage_pageTitleTextColor"
                    android:text="@string/setting_menuRecommend_textText"/>
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    app:boxBackgroundColor="@color/EditTextBackgroundColor"
                    android:inputType="textImeMultiLine">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/home_add_TextInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <!--        divide line-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/page_divideLineSize"
                android:background="@android:color/transparent"
                android:layout_marginHorizontal="@dimen/page_dividePadding"
                android:layout_marginTop="@dimen/page_dividePadding"/>

            <!--    5. 提交按鈕-->
            <Button
                android:id="@+id/home_add_submitButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/settingpage_pageTextPaddingVertical"
                android:textSize="@dimen/settingpage_pageButtonTextSize"
                android:textColor="@color/settingpage_pageButtonTextColor"
                android:text="@string/home_add_submitText"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>