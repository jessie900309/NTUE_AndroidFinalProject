<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/subpage_chart"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_purple">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foregroundGravity="center"
        android:src="@drawable/background_normal"/>

    <!--    Chart-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginHorizontal="@dimen/page_dividePadding"
        android:paddingVertical="@dimen/mainpageFragmentPadding">

        <!-- todo 未開發功能(動態menu)-->

        <!--        show member menu-->

        <!--        show member 100% line-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:layout_weight="1"
                android:background="@color/purple_200" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:layout_weight="1"
                android:background="@color/purple_500" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:layout_weight="1"
                android:background="@color/purple_700" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:layout_weight="1"
                android:background="@color/shrineBrown600" />
        </LinearLayout>

        <!--        show type menu-->

        <!--        show type 100% line-->

        <!--        divide line-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/page_divideLineSize"
            android:layout_marginHorizontal="@dimen/page_dividePadding"
            android:layout_marginVertical="@dimen/page_dividePadding"
            android:background="@color/SecondTextColor" />


        <!--        divide line-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/page_divideLineSize"
            android:layout_marginHorizontal="@dimen/page_dividePadding"
            android:layout_marginVertical="@dimen/page_dividePadding"
            android:background="@color/SecondTextColor" />
        <!--        歷史紀錄-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!--    List Title-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/chart_historyTitle_exTopMember"
                    android:textColor="@color/PrimartTextColor"
                    android:textSize="@dimen/chart_itemTitleTextSize" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/chart_historyTitle_exTopType"
                    android:textColor="@color/PrimartTextColor"
                    android:textSize="@dimen/chart_itemTitleTextSize" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/chart_historyTitle_inTopMember"
                    android:textColor="@color/PrimartTextColor"
                    android:textSize="@dimen/chart_itemTitleTextSize" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/chart_historyTitle_inTopType"
                    android:textColor="@color/PrimartTextColor"
                    android:textSize="@dimen/chart_itemTitleTextSize" />
            </LinearLayout>
            <!--    List Value-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/chart_exTopMenber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/chart_itemValuePadding"
                    android:text="XXX"
                    android:textColor="@color/PrimartTextColor"
                    android:textSize="@dimen/chart_itemTitleTextSize" />

                <TextView
                    android:id="@+id/chart_exTopType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/chart_itemValuePadding"
                    android:text="XXX"
                    android:textColor="@color/PrimartTextColor"
                    android:textSize="@dimen/chart_itemTitleTextSize" />

                <TextView
                    android:id="@+id/chart_inTopMenber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/chart_itemValuePadding"
                    android:text="XXX"
                    android:textColor="@color/PrimartTextColor"
                    android:textSize="@dimen/chart_itemTitleTextSize" />

                <TextView
                    android:id="@+id/chart_inTopType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/chart_itemValuePadding"
                    android:text="XXX"
                    android:textColor="@color/PrimartTextColor"
                    android:textSize="@dimen/chart_itemTitleTextSize" />
            </LinearLayout>
        </LinearLayout>

        <!-- TODO chart_exTopMenber/chart_exTopType/chart_inTopMenber/chart_inTopType -->

    </LinearLayout>

</RelativeLayout>