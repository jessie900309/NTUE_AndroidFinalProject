<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white">

<!--
showTransBookItem_date
showTransBookItem_acStart
showTransBookItem_acEnd
showTransBookItem_money
showTransBookItem_memo
-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/home_bookkeepingItemTitlePadding">
        <!--        date / acStart / money-->
        <!--        money textColor black-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="@dimen/home_bookkeepingItemTitlePadding"
            android:background="@color/home_bookkeepingItem_titleTextBackgroundColor">
            <TextView
                android:id="@+id/showTransBookItem_date"
                android:layout_width="@dimen/home_bookkeepingItemTitleWidthZero"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="start"
                android:paddingHorizontal="@dimen/home_bookkeepingItemPadding"
                android:layout_marginStart="@dimen/home_bookkeepingItemStartEndPadding"
                android:textSize="@dimen/home_bookkeepingItem_dateTextSize"
                android:textColor="@color/home_bookkeepingItem_titleTextColor"
                android:text="@string/home_bookkeepingTransItem_dateDefaultText"/>
            <TextView
                android:id="@+id/showTransBookItem_acStart"
                android:layout_width="@dimen/home_bookkeepingItemTitleWidthZero"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="start"
                android:paddingHorizontal="@dimen/home_bookkeepingItemPadding"
                android:textSize="@dimen/home_bookkeepingItem_classTextSize"
                android:textColor="@color/home_bookkeepingItem_titleTextColor"
                android:text="@string/home_bookkeepingTransItem_acStartDefaultText"/>
            <TextView
                android:id="@+id/showTransBookItem_money"
                android:layout_width="@dimen/home_bookkeepingItemTitleWidthZero"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="end"
                android:paddingHorizontal="@dimen/home_bookkeepingItemPadding"
                android:layout_marginEnd="@dimen/home_bookkeepingItemStartEndPadding"
                app:fontWeight="700"
                android:textSize="@dimen/home_bookkeepingItem_numberTextSize"
                android:textColor="@color/black"
                android:text="@string/home_bookkeepingTransItem_moneyDefaultText"/>
        </LinearLayout>
        <!--        acEnd-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/home_bookkeepingItem_contentTextBackgroundColor"
            android:padding="@dimen/home_bookkeepingItemTitlePadding">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/home_bookkeepingItemPadding"
                android:layout_marginStart="@dimen/home_bookkeepingItemStartEndPadding"
                android:textSize="@dimen/home_bookkeepingItem_memberTextSize"
                android:textColor="@color/home_bookkeepingItem_contentTextColor"
                android:text="@string/home_bookkeepingTransItem_transText"/>
            <TextView
                android:id="@+id/showTransBookItem_acEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/home_bookkeepingItem_memberTextSize"
                android:textColor="@color/home_bookkeepingItem_contentTextColor"
                android:text="@string/home_bookkeepingTransItem_acEndDefaultText"/>
        </LinearLayout>
        <!--        memo-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/home_bookkeepingItem_contentTextBackgroundColor"
            android:padding="@dimen/home_bookkeepingItemTitlePadding">
            <TextView
                android:id="@+id/showTransBookItem_memo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/home_bookkeepingItemPadding"
                android:layout_marginStart="@dimen/home_bookkeepingItemStartEndPadding"
                android:layout_marginEnd="@dimen/home_bookkeepingItemStartEndPadding"
                android:textSize="@dimen/home_bookkeepingItem_memoTextSize"
                android:textColor="@color/home_bookkeepingItem_contentTextColor"
                android:text="@string/home_bookkeepingTransItem_memoDefaultText"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>