<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_normal">

    <!--    AppBar-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_bookkeepingAppBarHeight"
        android:paddingTop="@dimen/home_bookkeepingAppBarPadding"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/home_bookkeepingAppBarTextSize"
            android:textColor="@color/home_bookkeepingAppBarTextColor"
            android:text="@string/home_transBookText"/>
    </LinearLayout>

    <!--    listview 顯示紀錄-->
    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="@dimen/home_bookkeepingListViewPadding"
        android:id="@+id/home_bookkeepTransListView"/>

    <!--    TODO do-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/home_bookkeepingAppBarPadding"
        android:paddingHorizontal="@dimen/home_bookkeepButtonPaddingHorizontal"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/transbookAction_view"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/home_bookkeepButtonPadding"
            android:backgroundTint="@color/shrineBrown600"
            android:textColor="@color/shrinePink100"
            android:text="@string/home_bookkeepingAction_ViewText"/>
        <Button
            android:id="@+id/transbookAction_edit"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/home_bookkeepButtonPadding"
            android:backgroundTint="@color/shrineBrown600"
            android:textColor="@color/shrinePink100"
            android:text="@string/home_bookkeepingAction_EditText"/>
        <Button
            android:id="@+id/transbookAction_delete"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/home_bookkeepButtonPadding"
            android:backgroundTint="@color/shrineBrown600"
            android:textColor="@color/shrinePink100"
            android:text="@string/home_bookkeepingAction_DelText"/>
    </LinearLayout>

</LinearLayout>